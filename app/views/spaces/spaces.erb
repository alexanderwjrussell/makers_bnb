<h1>Book a Space</h1>
<p></p>

<% if current_user %>
  <a class="btn btn-secondary" role="button" href='/spaces/new'>List a Space</a>
<% end %>

<form action='/spaces' method='post'>
  <input name="available_on" type="date" placeholder="Available on" required>
  <input type="submit" value="Filter Spaces">
</form>

<ul id='spaces'>
  <% @spaces.each do |space| %>
    <li>
        Title: <a href="/spaces/<%= space.id %>"><%= space.space_name %></a>
        Description: <%= space.description %>
        Price: <%= '%.2f' % space.price_per_night %>
    </li>
  <% end %>
</ul>
