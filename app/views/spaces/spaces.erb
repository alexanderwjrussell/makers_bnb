<h1>Book a Space</h1>
<% if current_user %>
<p>
  <a class="btn btn-default" role="button" href='/spaces/new'>List a Space</a>
</p>
<% end %>

<form class="form-inline" action="/spaces" method="post">
  <div class="form-group">
    <label>Check In</label>
    <input name="available_on" type="date" class="form-control" placeholder="Check In" required>
  </div>
  <button type="submit" class="btn btn-default">Filter Spaces</button>
</form>

<ul id='spaces'>
  <% @spaces.each do |space| %>
    <li>
        Title: <a href="/spaces/<%= space.id %>"><%= space.space_name %></a>
        Description: <%= space.description %>
        Price: <%= '%.2f' % space.price_per_night %>
    </li>
  <% end %>
</ul>
